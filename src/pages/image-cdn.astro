---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

// You'll need to replace these with your actual embroidery images
// For now I'm using placeholder references that won't break the build
const placeholderImage = '/images/placeholder.jpg';

// Sample embroidery projects - replace with your actual work
const embroideryProjects = [
    {
        title: "Custom Corporate Polos",
        description: "Professional embroidered polos with your company logo, perfect for creating a cohesive team look.",
        imageUrl: placeholderImage,
        category: "corporate"
    },
    {
        title: "Team Sports Apparel",
        description: "High-quality embroidered team names, numbers, and logos for sports uniforms and gear.",
        imageUrl: placeholderImage,
        category: "sports"
    },
    {
        title: "Personalized Gifts",
        description: "Custom monograms and designs for special occasions like birthdays, weddings, and graduations.",
        imageUrl: placeholderImage,
        category: "gifts"
    },
    {
        title: "School Spirit Wear",
        description: "Show your school pride with custom embroidered apparel featuring your school's mascot and colors.",
        imageUrl: placeholderImage,
        category: "school"
    }
];

// Services offered
const services = [
    {
        title: "Logo Digitization",
        description: "We convert your logo or artwork into a digital embroidery file for perfect stitching.",
        icon: "✓"
    },
    {
        title: "Custom Design",
        description: "Our design team can create custom embroidery designs based on your ideas and specifications.",
        icon: "✓"
    },
    {
        title: "Bulk Orders",
        description: "Special pricing for bulk orders for teams, businesses, and events.",
        icon: "✓"
    },
    {
        title: "Quick Turnaround",
        description: "Fast production times to meet your deadlines without compromising quality.",
        icon: "✓"
    }
];
---

<Layout title="Custom Embroidery Services | Triple Threds">
    <div class="flex flex-col gap-12 sm:gap-16 max-w-6xl mx-auto">
        <!-- Hero Section -->
        <section class="text-center py-12">
            <h1 class="text-4xl font-bold mb-6">Custom Embroidery Services</h1>
            <p class="text-xl max-w-3xl mx-auto mb-8">
                Professional embroidery for businesses, teams, schools, and personal projects. 
                From logo shirts to custom gifts, we bring your designs to life with precision and quality.
            </p>
            <div class="flex justify-center">
                <a href="/contact" class="inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                    Get a Free Quote
                </a>
            </div>
        </section>

        <!-- Embroidery Process Section -->
        <section class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold mb-8 text-center">Our Embroidery Process</h2>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
                <div class="text-center p-4">
                    <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center text-blue-600 text-xl font-bold mx-auto mb-4">1</div>
                    <h3 class="font-bold text-lg mb-2">Consultation</h3>
                    <p>Discuss your vision, requirements, and specifications for your project.</p>
                </div>
                <div class="text-center p-4">
                    <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center text-blue-600 text-xl font-bold mx-auto mb-4">2</div>
                    <h3 class="font-bold text-lg mb-2">Design</h3>
                    <p>Our team digitizes your logo or creates a custom design for embroidery.</p>
                </div>
                <div class="text-center p-4">
                    <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center text-blue-600 text-xl font-bold mx-auto mb-4">3</div>
                    <h3 class="font-bold text-lg mb-2">Production</h3>
                    <p>We stitch your design with precision on your chosen products.</p>
                </div>
                <div class="text-center p-4">
                    <div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center text-blue-600 text-xl font-bold mx-auto mb-4">4</div>
                    <h3 class="font-bold text-lg mb-2">Delivery</h3>
                    <p>Your completed items are carefully packaged and delivered on time.</p>
                </div>
            </div>
        </section>

        <!-- Featured Projects -->
        <section>
            <h2 class="text-3xl font-bold mb-8">Featured Projects</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {embroideryProjects.map((project) => (
                    <div class="border rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow">
                        <img 
                            src={project.imageUrl} 
                            alt={project.title} 
                            class="w-full h-64 object-cover"
                        />
                        <div class="p-6">
                            <h3 class="text-xl font-bold mb-2">{project.title}</h3>
                            <p class="text-gray-700">{project.description}</p>
                        </div>
                    </div>
                ))}
            </div>
            <div class="text-center mt-8">
                <a href="/portfolio" class="inline-block px-6 py-3 border border-blue-600 text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors">
                    View Full Portfolio
                </a>
            </div>
        </section>

        <!-- Services -->
        <section class="bg-gray-50 p-8 rounded-lg">
            <h2 class="text-3xl font-bold mb-8">Our Services</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {services.map((service) => (
                    <div class="flex items-start p-4">
                        <div class="bg-blue-100 w-10 h-10 rounded-full flex items-center justify-center text-blue-600 font-bold mr-4 flex-shrink-0">
                            {service.icon}
                        </div>
                        <div>
                            <h3 class="font-bold text-lg mb-1">{service.title}</h3>
                            <p class="text-gray-700">{service.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </section>

        <!-- Call to Action -->
        <section class="text-center py-12 bg-blue-600 text-white rounded-lg">
            <h2 class="text-3xl font-bold mb-4">Ready to Get Started?</h2>
            <p class="text-xl max-w-2xl mx-auto mb-8">
                Contact us today to discuss your custom embroidery project and get a free quote.
            </p>
            <div class="flex justify-center gap-4 flex-wrap">
                <a href="/contact" class="inline-block px-6 py-3 bg-white text-blue-600 font-medium rounded-lg hover:bg-gray-100 transition-colors">
                    Contact Us
                </a>
                <a href="/order" class="inline-block px-6 py-3 border border-white text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                    Order Now
                </a>
            </div>
        </section>
    </div>
</Layout>
