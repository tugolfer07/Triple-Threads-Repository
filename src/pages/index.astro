---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Triple Threads | Custom Embroidery">
  <!-- Header -->
  <header>
    <!-- Top bar with logo and login/cart -->
    <div class="aegean-bg text-white py-3">
      <div class="container mx-auto px-4 flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="script-font text-2xl">Triple Threads</a>
        
        <!-- User controls -->
        <div class="flex items-center gap-4">
          <a href="/login" class="hover:text-rusty-coral transition-colors">Login</a>
          <a href="/register" class="hover:text-rusty-coral transition-colors">Register</a>
          <a href="/cart" class="relative" aria-label="Shopping Cart">
            <span class="text-xl">ðŸ›’</span>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Main navigation -->
    <nav class="bg-white shadow-sm py-4">
      <div class="container mx-auto px-4 flex flex-wrap justify-between items-center">
        <!-- Main menu -->
        <div class="flex flex-wrap gap-x-6 gap-y-2">
          <a href="/" class="rusty-coral-text font-medium">Home</a>
          <a href="/services" class="aegean-text hover:rusty-coral-text font-medium transition-colors">Services</a>
          <a href="/portfolio" class="aegean-text hover:rusty-coral-text font-medium transition-colors">Portfolio</a>
          <a href="/about" class="aegean-text hover:rusty-coral-text font-medium transition-colors">About Us</a>
          <a href="/contact" class="aegean-text hover:rusty-coral-text font-medium transition-colors">Contact</a>
        </div>
        
        <!-- Search form -->
        <div class="mt-3 sm:mt-0">
          <form class="flex border border-sea-mist rounded overflow-hidden">
            <input type="search" placeholder="Search..." class="py-2 px-3 w-full sm:w-auto focus:outline-none" aria-label="Search">
            <button type="submit" class="rusty-coral-bg text-white py-2 px-4">Search</button>
          </form>
        </div>
      </div>
    </nav>
  </header>

  <!-- Hero Section -->
  <section class="py-16 pale-taupe-bg">
    <div class="container mx-auto px-4 text-center">
      <h1 class="mb-6">
        <span class="script-font text-5xl block rusty-coral-text">Triple Threads</span>
        <span class="uppercase text-xl tracking-widest aegean-text">CUSTOM EMBROIDERY</span>
      </h1>
      
      <p class="text-xl max-w-2xl mx-auto mb-8 pine-text">
        Professional embroidery for schools, businesses, and personalized projects
      </p>
      
      <div class="flex justify-center gap-4 flex-wrap">
        <a href="/contact" class="btn-primary">Get a Quote</a>
        <a href="/portfolio" class="btn-secondary">View Our Work</a>
      </div>
    </div>
  </section>
  
  <!-- Services Section with Simple Cards -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center aegean-text mb-10">Our Services</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- School Uniforms -->
        <a href="/services/school-uniforms" class="service-card">
          <div class="aegean-bg p-4 flex items-center justify-center">
            <h3 class="text-white font-medium text-xl">School Uniforms</h3>
          </div>
          <div class="p-5">
            <p class="pine-text">Custom embroidery for private school uniforms</p>
          </div>
        </a>
        
        <!-- Golf Products -->
        <a href="/services/golf-products" class="service-card">
          <div class="aegean-bg p-4 flex items-center justify-center">
            <h3 class="text-white font-medium text-xl">Golf Products</h3>
          </div>
          <div class="p-5">
            <p class="pine-text">Custom headcovers and golf accessories</p>
          </div>
        </a>
        
        <!-- Corporate Apparel -->
        <a href="/services/corporate-apparel" class="service-card">
          <div class="aegean-bg p-4 flex items-center justify-center">
            <h3 class="text-white font-medium text-xl">Corporate Apparel</h3>
          </div>
          <div class="p-5">
            <p class="pine-text">Professional branded clothing for businesses</p>
          </div>
        </a>
        
        <!-- Personalized Gifts -->
        <a href="/services/personalized-gifts" class="service-card">
          <div class="aegean-bg p-4 flex items-center justify-center">
            <h3 class="text-white font-medium text-xl">Personalized Gifts</h3>
          </div>
          <div class="p-5">
            <p class="pine-text">Custom monogrammed items for special occasions</p>
          </div>
        </a>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects - Simple List -->
  <section class="py-16 sea-mist-bg">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center aegean-text mb-10">Featured Projects</h2>
      
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-lg p-6 shadow">
          <ul class="space-y-3">
            <li><a href="/portfolio" class="pine-text hover:rusty-coral-text transition-colors">Project 1</a></li>
            <li><a href="/portfolio" class="pine-text hover:rusty-coral-text transition-colors">Project 2</a></li>
            <li><a href="/portfolio" class="pine-text hover:rusty-coral-text transition-colors">Project 3</a></li>
            <li><a href="/portfolio" class="pine-text hover:rusty-coral-text transition-colors">Project 4</a></li>
            <li><a href="/portfolio" class="pine-text hover:rusty-coral-text transition-colors">Project 5</a></li>
            <li><a href="/portfolio" class="pine-text hover:rusty-coral-text transition-colors">Project 6</a></li>
          </ul>
        </div>
        
        <div class="text-center mt-8">
          <a href="/portfolio" class="btn-secondary">View All Projects</a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Testimonial Section -->
  <section class="pine-bg py-16">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center text-white mb-10">What Our Clients Say</h2>
      
      <div class="max-w-3xl mx-auto bg-white rounded-lg p-8 shadow">
        <p class="text-xl italic mb-6 aegean-text">
          "Triple Threads transformed our team uniforms with incredible attention to detail. Their embroidery quality is outstanding and their customer service is even better!"
        </p>
        <p class="font-medium rusty-coral-text text-right">â€” Sarah Johnson, Oak Hill Academy</p>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="rusty-coral-bg py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="section-title text-white mb-6">Ready to Start Your Custom Project?</h2>
      <p class="text-white text-xl mb-8 max-w-2xl mx-auto">
        Contact us today for a free quote and consultation.
      </p>
      <a href="/contact" class="bg-white rusty-coral-text font-medium py-3 px-8 rounded-lg inline-block hover:bg-pale-taupe transition-colors">
        Get Started
      </a>
    </div>
  </section>
  
  <!-- Footer -->
  <footer class="aegean-bg text-white py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Services -->
        <div>
          <h3 class="text-xl font-medium mb-4 rusty-coral-text">Services</h3>
          <ul class="space-y-3">
            <li><a href="/services/school-uniforms" class="hover:text-rusty-coral transition-colors">School Uniforms</a></li>
            <li><a href="/services/golf-products" class="hover:text-rusty-coral transition-colors">Golf Products</a></li>
            <li><a href="/services/corporate-apparel" class="hover:text-rusty-coral transition-colors">Corporate Apparel</a></li>
            <li><a href="/services/custom-designs" class="hover:text-rusty-coral transition-colors">Custom Designs</a></li>
          </ul>
        </div>
        
        <!-- Customer Care -->
        <div>
          <h3 class="text-xl font-medium mb-4 rusty-coral-text">Customer Care</h3>
          <ul class="space-y-3">
            <li><a href="/about" class="hover:text-rusty-coral transition-colors">About Us</a></li>
            <li><a href="/contact" class="hover:text-rusty-coral transition-colors">Contact Us</a></li>
            <li><a href="/faq" class="hover:text-rusty-coral transition-colors">FAQ</a></li>
            <li><a href="/policies" class="hover:text-rusty-coral transition-colors">Policies</a></li>
          </ul>
        </div>
        
        <!-- Connect With Us -->
        <div>
          <h3 class="text-xl font-medium mb-4 rusty-coral-text">Connect With Us</h3>
          <div class="flex space-x-4 mb-4">
            <a href="#" aria-label="Facebook" class="bg-white bg-opacity-20 w-10 h-10 flex items-center justify-center rounded-full hover:bg-rusty-coral transition-colors">f</a>
            <a href="#" aria-label="Instagram" class="bg-white bg-opacity-20 w-10 h-10 flex items-center justify-center rounded-full hover:bg-rusty-coral transition-colors">in</a>
            <a href="#" aria-label="Pinterest" class="bg-white bg-opacity-20 w-10 h-10 flex items-center justify-center rounded-full hover:bg-rusty-coral transition-colors">p</a>
          </div>
          
          <form class="mt-4">
            <label for="email" class="sr-only">Email</label>
            <div class="flex">
              <input type="email" id="email" placeholder="Your email" class="px-4 py-2 rounded-l w-full">
              <button type="submit" class="rusty-coral-bg px-4 py-2 rounded-r text-white">Subscribe</button>
            </div>
          </form>
        </div>
      </div>
      
      <div class="border-t border-white border-opacity-20 mt-8 pt-6 text-center text-sm text-white text-opacity-70">
        &copy; 2025 Triple Threads Embroidery. All rights reserved.
      </div>
    </div>
  </footer>
</Layout>