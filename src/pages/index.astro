---
import Layout from '../layouts/Layout.astro';

const services = [
  {
    title: "School Uniforms",
    description: "Custom embroidery for private school uniforms",
    link: "/services/school-uniforms"
  },
  {
    title: "Golf Products",
    description: "Custom headcovers and golf accessories",
    link: "/services/golf-products"
  },
  {
    title: "Corporate Apparel",
    description: "Professional branded clothing for businesses",
    link: "/services/corporate-apparel"
  },
  {
    title: "Personalized Gifts",
    description: "Custom monogrammed items for special occasions",
    link: "/services/personalized-gifts"
  }
];

const featuredProjects = [
  "Project 1",
  "Project 2",
  "Project 3",
  "Project 4",
  "Project 5",
  "Project 6"
];
---

<Layout title="Triple Threads | Custom Embroidery">
  <!-- Hero Section -->
  <section class="py-16 pale-taupe-bg">
    <div class="container mx-auto px-4 text-center">
      <h1 class="mb-6">
        <span class="script-font text-5xl block rusty-coral-text">Triple Threads</span>
        <span class="uppercase text-xl tracking-widest aegean-text">CUSTOM EMBROIDERY</span>
      </h1>
      
      <p class="text-xl max-w-2xl mx-auto mb-8 pine-text">
        Professional embroidery for schools, businesses, and personalized projects
      </p>
      
      <div class="flex justify-center gap-4 flex-wrap">
        <a href="/contact" class="btn-primary">Get a Quote</a>
        <a href="/portfolio" class="btn-secondary">View Our Work</a>
      </div>
    </div>
  </section>
  
  <!-- Services Section -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center aegean-text mb-10">Our Services</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {services.map(service => (
          <a href={service.link} class="service-card hover-lift">
            <div class="h-40 aegean-bg flex items-center justify-center p-4">
              <h3 class="text-white font-medium text-xl text-center">{service.title}</h3>
            </div>
            <div class="p-5">
              <p class="text-center pine-text">{service.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Featured Projects -->
  <section class="py-16 sea-mist-bg">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center aegean-text mb-10">Featured Projects</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-6 mb-8">
        {featuredProjects.map(project => (
          <a href="/portfolio" class="pale-taupe-bg p-4 hover-lift rounded-lg flex items-center justify-center h-40">
            <span class="pine-text">{project}</span>
          </a>
        ))}
      </div>
      
      <div class="text-center">
        <a href="/portfolio" class="btn-secondary border-rusty-coral rusty-coral-text inline-block">
          View All Projects
        </a>
      </div>
    </div>
  </section>
  
  <!-- Testimonial Section -->
  <section class="pine-bg py-16">
    <div class="container mx-auto px-4">
      <h2 class="section-title text-center text-white mb-10">What Our Clients Say</h2>
      
      <div class="max-w-3xl mx-auto bg-white rounded-lg p-8 shadow">
        <p class="text-xl italic mb-6 aegean-text">
          "Triple Threads transformed our team uniforms with incredible attention to detail. Their embroidery quality is outstanding and their customer service is even better!"
        </p>
        <p class="font-medium rusty-coral-text text-right">â€” Sarah Johnson, Oak Hill Academy</p>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="rusty-coral-bg py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="section-title text-white mb-6">Ready to Start Your Custom Project?</h2>
      <p class="text-white text-xl mb-8 max-w-2xl mx-auto">
        Contact us today for a free quote and consultation.
      </p>
      <a href="/contact" class="bg-white rusty-coral-text font-medium py-3 px-8 rounded-lg inline-block hover:bg-pale-taupe transition-colors">
        Get Started
      </a>
    </div>
  </section>
  
  <!-- Footer -->
  <footer class="aegean-bg text-white py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        <!-- Services -->
        <div>
          <h3 class="text-xl font-medium mb-6 rusty-coral-text">Services</h3>
          <ul class="space-y-3">
            <li><a href="/services/school-uniforms" class="hover:text-rusty-coral transition-colors">School Uniforms</a></li>
            <li><a href="/services/golf-products" class="hover:text-rusty-coral transition-colors">Golf Products</a></li>
            <li><a href="/services/corporate-apparel" class="hover:text-rusty-coral transition-colors">Corporate Apparel</a></li>
            <li><a href="/services/custom-designs" class="hover:text-rusty-coral transition-colors">Custom Designs</a></li>
          </ul>
        </div>
        
        <!-- Customer Care -->
        <div>
          <h3 class="text-xl font-medium mb-6 rusty-coral-text">Customer Care</h3>
          <ul class="space-y-3">
            <li><a href="/about" class="hover:text-rusty-coral transition-colors">About Us</a></li>
            <li><a href="/contact" class="hover:text-rusty-coral transition-colors">Contact Us</a></li>
            <li><a href="/faq" class="hover:text-rusty-coral transition-colors">FAQ</a></li>
            <li><a href="/policies" class="hover:text-rusty-coral transition-colors">Policies</a></li>
          </ul>
        </div>
        
        <!-- Connect With Us -->
        <div>
          <h3 class="text-xl font-medium mb-6 rusty-coral-text">Connect With Us</h3>
          <div class="flex space-x-4 mb-6">
            <a href="#" aria-label="Facebook" class="w-10 h-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center hover:bg-rusty-coral transition-colors">f</a>
            <a href="#" aria-label="Instagram" class="w-10 h-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center hover:bg-rusty-coral transition-colors">in</a>
            <a href="#" aria-label="Pinterest" class="w-10 h-10 rounded-full bg-white bg-opacity-20 flex items-center justify-center hover:bg-rusty-coral transition-colors">p</a>
          </div>
          
          <form class="mt-4">
            <label for="email" class="sr-only">Email</label>
            <div class="flex">
              <input type="email" id="email" placeholder="Your email" class="px-4 py-2 rounded-l w-full">
              <button type="submit" class="rusty-coral-bg px-4 py-2 rounded-r text-white">Subscribe</button>
            </div>
          </form>
        </div>
      </div>
      
      <div class="border-t border-white border-opacity-20 mt-10 pt-6 text-center text-sm text-white text-opacity-70">
        &copy; 2025 Triple Threads Embroidery. All rights reserved.
      </div>
    </div>
  </footer>
</Layout>