---
import Layout from '../layouts/Layout.astro';

// Any variables or data fetching happens here, but no return statements!
const pageTitle = "Triple Threds | Custom Embroidery";
const services = [
  "Private School Uniforms",
  "Custom Golf Headcovers",
  "Corporate Apparel",
  "Sports Team Gear"
];
---

<Layout title={pageTitle}>
  <main class="container mx-auto px-4 py-8">
    <!-- Hero Section -->
    <section class="text-center py-12">
      <div class="mb-8">
        <h1 class="mb-4">
          <span class="text-5xl font-bold block mb-2">Triple Threds</span>
          <span class="text-2xl font-medium text-gray-700">CUSTOM EMBROIDERY</span>
        </h1>
      </div>
      
      <p class="text-xl max-w-3xl mx-auto mb-8">
        Professional embroidery services for businesses, schools, sports teams, and personal projects.
        Quality craftsmanship and attention to detail for all your custom embroidery needs.
      </p>
      
      <div class="flex justify-center">
        <a href="/contact" class="inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
          Get a Quote
        </a>
      </div>
    </section>
    
    <!-- Services Preview -->
    <section class="py-12">
      <h2 class="text-3xl font-bold mb-8 text-center">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {services.map((service) => (
          <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="font-bold text-xl mb-2">{service}</h3>
            <p>Quality custom embroidery for your specific needs.</p>
          </div>
        ))}
      </div>
      <div class="text-center mt-8">
        <a href="/image-cdn" class="inline-block px-6 py-3 border border-blue-600 text-blue-600 font-medium rounded-lg hover:bg-blue-50 transition-colors">
          View All Services
        </a>
      </div>
    </section>
  </main>
</Layout>
  
    <!-- Private School Uniforms -->
    <div class="mb-12">
        <h3 class="text-2xl font-bold mb-4 text-blue-600">Private School Uniforms</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <p class="mb-4">We specialize in providing high-quality embroidered uniforms for private schools. Our comprehensive uniform program includes:</p>
                <ul class="space-y-2">
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span>School logos on polos, oxfords, and blazers</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span>Monogramming options for student names</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span>Consistent quality across all uniform pieces</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span>Bulk ordering system for school administration</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span>Parent-friendly ordering portal</span>
                    </li>
                </ul>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-sm">
                <h4 class="font-bold text-lg mb-3">Schools We Serve</h4>
                <p class="mb-3">We proudly provide uniform services to private schools throughout Oklahoma. Our dedicated school program offers:</p>
                <ul class="space-y-1">
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Dedicated account representative</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Seasonal ordering schedules</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Customized online ordering system</span>
                    </li>
                </ul>
                <div class="mt-4">
                    <a href="/school-uniforms" class="text-blue-600 font-medium hover:underline">Learn more about our school uniform program →</a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Golf Products -->
    <div class="mb-12">
        <h3 class="text-2xl font-bold mb-4 text-blue-600">Custom Golf Products</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div>
                <p class="mb-4">Our premium custom golf products are perfect for golf clubs, tournaments, and individual golfers looking for personalized gear:</p>
                <ul class="space-y-2">
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span><strong>Custom Headcovers</strong> - Personalized leather and synthetic headcovers for drivers, fairway woods, hybrids, and putters</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span><strong>Golf Towels</strong> - Custom embroidered towels with club logos or personal monograms</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span><strong>Team Apparel</strong> - Coordinated polos, pullovers, and hats for golf teams and events</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 font-bold mr-2">✓</span>
                        <span><strong>Tournament Packages</strong> - Bulk orders for corporate events and charity tournaments</span>
                    </li>
                </ul>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-sm">
                <h4 class="font-bold text-lg mb-3">Custom Headcover Spotlight</h4>
                <p class="mb-3">Our premium headcovers feature:</p>
                <ul class="space-y-1">
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>High-quality materials that protect clubs</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Precise embroidery of logos and designs</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Custom color matching to team or personal preferences</span>
                    </li>
                    <li class="flex items-start">
                        <span class="text-blue-600 mr-2">•</span>
                        <span>Options for individual or set designs</span>
                    </li>
                </ul>
                <div class="mt-4">
                    <a href="/golf-products" class="text-blue-600 font-medium hover:underline">Explore our golf product collection →</a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Additional Services -->
    <div>
        <h3 class="text-2xl font-bold mb-4 text-blue-600">Additional Embroidery Services</h3>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="bg-white p-5 rounded-lg shadow-sm">
                <h4 class="font-bold text-lg mb-2">Corporate Apparel</h4>
                <p>Professional embroidered polos, button-ups, and outerwear for your business with precise logo reproduction.</p>
            </div>
            <div class="bg-white p-5 rounded-lg shadow-sm">
                <h4 class="font-bold text-lg mb-2">Sports Teams</h4>
                <p>Custom jerseys, warm-ups, and bags for local sports teams with names, numbers, and team logos.</p>
            </div>
            <div class="bg-white p-5 rounded-lg shadow-sm">
                <h4 class="font-bold text-lg mb-2">Personalized Gifts</h4>
                <p>Monogrammed items for special occasions including birthdays, weddings, baby showers, and graduations.</p>
            </div>
        </div>
    </div>
    
    <!-- Call to Action within Services -->
    <div class="text-center mt-10">
        <a href="/contact" class="inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
            Request a Custom Quote
        </a>
    </div>
</section>

    <!-- Gallery Section -->
    <section class="gallery py-20 text-center">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold mb-10 text-blue-900">Our Work</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <img src="/sample-embroidery1.jpg" alt="Embroidery Example 1" class="rounded-lg shadow-md" />
                <img src="/sample-embroidery2.jpg" alt="Embroidery Example 2" class="rounded-lg shadow-md" />
                <img src="/sample-embroidery3.jpg" alt="Embroidery Example 3" class="rounded-lg shadow-md" />
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact py-20 bg-blue-900 text-white text-center">
        <div class="container mx-auto px-6">
            <h2 class="text-3xl font-bold mb-6">Let's Work Together</h2>
            <p class="text-lg">Have a project in mind? Let’s bring your ideas to life.</p>
            <a href="mailto:info@triplethreadsok.com" class="mt-4 inline-block bg-white text-blue-900 font-semibold px-6 py-3 rounded-lg hover:bg-gray-200"
                >Email Us</a
            >
        </div>
    </section>
</Layout>
