---
import Layout from '../layouts/Layout.astro';

// Define your data variables here - no return statements
const pageTitle = "Triple Threads | Custom Embroidery";
const categories = [
  {
    title: "School Uniforms",
    description: "Custom embroidery for private school uniforms",
    image: "/images/placeholder-school.jpg" 
  },
  {
    title: "Golf Products",
    description: "Custom headcovers and golf accessories",
    image: "/images/placeholder-golf.jpg"
  },
  {
    title: "Corporate Apparel",
    description: "Professional branded clothing for businesses",
    image: "/images/placeholder-corporate.jpg"
  },
  {
    title: "Personalized Gifts",
    description: "Custom monogrammed items for special occasions",
    image: "/images/placeholder-gifts.jpg"
  }
];

// Add any other data you need
const testimonials = [
  {
    text: "Triple Threads transformed our team uniforms with incredible attention to detail. Their embroidery quality is outstanding and their customer service is even better!",
    author: "Sarah Johnson, Oak Hill Academy"
  }
];
---

<Layout title={pageTitle}>
  <!-- Custom fonts -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Pinyon+Script&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap');
    
    :root {
      --pine: rgb(75, 116, 108);
      --aegean: rgb(70, 90, 114);
      --rusty-coral: rgb(206, 134, 120);
      --sea-mist: rgb(192, 202, 203);
      --pale-taupe: rgb(238, 234, 228);
    }
    
    .script-font {
      font-family: 'Pinyon Script', cursive;
    }
    
    .uppercase {
      text-transform: uppercase;
    }
    
    body {
      font-family: 'Montserrat', sans-serif;
      background-color: var(--pale-taupe);
      color: var(--aegean);
    }
    
    .btn-primary {
      background-color: var(--rusty-coral);
      color: white;
      padding: 12px 24px;
      border-radius: 4px;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s;
    }
    
    .btn-primary:hover {
      background-color: rgb(186, 114, 100);
    }
    
    .btn-secondary {
      border: 2px solid var(--rusty-coral);
      color: var(--rusty-coral);
      padding: 10px 24px;
      border-radius: 4px;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s;
    }
    
    .btn-secondary:hover {
      background-color: rgba(206, 134, 120, 0.1);
    }
    
    .pine-bg {
      background-color: var(--pine);
    }
    
    .aegean-bg {
      background-color: var(--aegean);
    }
    
    .rusty-coral-bg {
      background-color: var(--rusty-coral);
    }
    
    .sea-mist-bg {
      background-color: var(--sea-mist);
    }
    
    .pale-taupe-bg {
      background-color: var(--pale-taupe);
    }
    
    .pine-text {
      color: var(--pine);
    }
    
    .aegean-text {
      color: var(--aegean);
    }
    
    .rusty-coral-text {
      color: var(--rusty-coral);
    }
    
    .sea-mist-text {
      color: var(--sea-mist);
    }
  </style>
  
  <!-- Header -->
  <header>
    <div class="aegean-bg text-white py-2">
      <div class="container mx-auto flex justify-between items-center px-4">
        <a href="/" class="script-font text-2xl">Triple Threads</a>
        <div class="flex items-center gap-4">
          <a href="/login" class="text-sm">Login</a>
          <a href="/register" class="text-sm">Register</a>
          <a href="/cart" class="relative w-6 h-6 bg-white rounded flex items-center justify-center">
            <span class="text-gray-800 text-sm">ðŸ›’</span>
          </a>
        </div>
      </div>
    </div>
    
    <div class="bg-white py-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center px-4">
        <div class="flex gap-5">
          <a href="/" class="aegean-text font-medium">Home</a>
          <a href="/services" class="aegean-text font-medium">Services</a>
          <a href="/portfolio" class="aegean-text font-medium">Portfolio</a>
          <a href="/about" class="aegean-text font-medium">About Us</a>
          <a href="/contact" class="aegean-text font-medium">Contact</a>
        </div>
        
        <form class="flex border border-gray-200 rounded overflow-hidden">
          <input type="text" placeholder="Search..." class="px-4 py-2 border-none outline-none w-48">
          <button type="submit" class="rusty-coral-bg text-white px-4 py-2">Search</button>
        </form>
      </div>
    </div>
  </header>
  
  <!-- Hero Section -->
  <section class="pale-taupe-bg py-16 text-center">
    <div class="container mx-auto px-4">
      <h1 class="mb-5">
        <span class="script-font text-6xl block rusty-coral-text mb-1 font-normal">Triple Threads</span>
        <span class="uppercase text-base tracking-widest aegean-text font-light">CUSTOM EMBROIDERY</span>
      </h1>
      <p class="text-xl max-w-2xl mx-auto mb-8 pine-text">Professional embroidery for schools, businesses, and personalized projects</p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a href="/contact" class="btn-primary">Get a Quote</a>
        <a href="/portfolio" class="btn-secondary">View Our Work</a>
      </div>
    </div>
  </section>
  
  <!-- Categories Section -->
  <section class="sea-mist-bg py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {categories.map((category) => (
          <a href={`/services/${category.title.toLowerCase().replace(/\s+/g, '-')}`} class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="h-48 aegean-bg flex items-center justify-center">
              <span class="text-white font-medium">{category.title}</span>
            </div>
            <div class="p-5">
              <h3 class="rusty-coral-text font-medium text-lg mb-1">{category.title}</h3>
              <p class="pine-text text-sm">{category.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Featured Projects Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl text-center aegean-text mb-10">Featured Projects</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-5">
        <!-- Project placeholders - replace with actual projects -->
        {[1, 2, 3, 4, 5, 6].map((item) => (
          <div class="pale-taupe-bg rounded-lg h-56 flex items-center justify-center">
            <span class="pine-text">Project {item}</span>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-10">
        <a href="/portfolio" class="btn-secondary">View All Projects</a>
      </div>
    </div>
  </section>
  
  <!-- Testimonial Section -->
  <section class="pine-bg py-16 text-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl text-center mb-10">What Our Clients Say</h2>
      
      <div class="bg-white p-8 rounded-lg shadow-md max-w-3xl mx-auto text-center">
        <p class="text-lg italic mb-5 aegean-text">
          "{testimonials[0].text}"
        </p>
        <p class="font-bold rusty-coral-text">â€” {testimonials[0].author}</p>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 rusty-coral-bg text-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl mb-4">Ready to Start Your Custom Project?</h2>
      <p class="max-w-xl mx-auto mb-8">
        Contact us today for a free quote and consultation.
      </p>
      <a href="/contact" class="bg-white rusty-coral-text px-6 py-3 rounded inline-block font-medium">Get Started</a>
    </div>
  </section>
  
  <!-- Footer -->
  <footer class="aegean-bg text-white py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mb-10">
        <div>
          <h4 class="rusty-coral-text font-medium mb-5">Services</h4>
          <ul class="space-y-3">
            <li><a href="/services/school-uniforms" class="hover:rusty-coral-text">School Uniforms</a></li>
            <li><a href="/services/golf-products" class="hover:rusty-coral-text">Golf Products</a></li>
            <li><a href="/services/corporate-apparel" class="hover:rusty-coral-text">Corporate Apparel</a></li>
            <li><a href="/services/custom-designs" class="hover:rusty-coral-text">Custom Designs</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="rusty-coral-text font-medium mb-5">Customer Care</h4>
          <ul class="space-y-3">
            <li><a href="/about" class="hover:rusty-coral-text">About Us</a></li>
            <li><a href="/contact" class="hover:rusty-coral-text">Contact Us</a></li>
            <li><a href="/faq" class="hover:rusty-coral-text">FAQ</a></li>
            <li><a href="/policies" class="hover:rusty-coral-text">Policies</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="rusty-coral-text font-medium mb-5">Connect With Us</h4>
          <div class="flex gap-4 mb-5">
            <a href="#" class="w-10 h-10 bg-white bg-opacity-10 rounded-full flex items-center justify-center hover:rusty-coral-bg">f</a>
            <a href="#" class="w-10 h-10 bg-white bg-opacity-10 rounded-full flex items-center justify-center hover:rusty-coral-bg">in</a>
            <a href="#" class="w-10 h-10 bg-white bg-opacity-10 rounded-full flex items-center justify-center hover:rusty-coral-bg">p</a>
          </div>
          
          <h5 class="font-medium mb-3">Join our newsletter</h5>
          <form class="flex">
            <input type="email" placeholder="Your email" class="px-4 py-2 rounded-l w-full">
            <button type="submit" class="rusty-coral-bg text-white px-4 py-2 rounded-r">Subscribe</button>
          </form>
        </div>
      </div>
      
      <div class="text-center pt-6 border-t border-white border-opacity-10 text-white text-opacity-70 text-sm">
        &copy; 2025 Triple Threads Embroidery. All rights reserved.
      </div>
    </div>
  </footer>
</Layout>