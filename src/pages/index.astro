---
// The simplest possible index page
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Triple Threads Embroidery</title>
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600&family=Pinyon+Script&display=swap" rel="stylesheet">
  
  <style>
    /* Simple CSS with no dependencies */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Montserrat', sans-serif;
      line-height: 1.6;
      color: #465A72; /* Aegean */
      background-color: #EEEAE4; /* Pale Taupe */
    }
    
    a {
      color: #465A72; /* Aegean */
      text-decoration: none;
    }
    
    a:hover {
      color: #CE8678; /* Rusty Coral */
    }
    
    img {
      max-width: 100%;
      height: auto;
    }
    
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    /* Header */
    header {
      background-color: #465A72; /* Aegean */
      color: white;
      padding: 10px 0;
    }
    
    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-family: 'Pinyon Script', cursive;
      font-size: 28px;
      color: white;
    }
    
    .nav-links {
      display: flex;
      gap: 15px;
    }
    
    .nav-links a {
      color: white;
    }
    
    /* Hero */
    .hero {
      text-align: center;
      padding: 40px 20px;
    }
    
    .hero h1 {
      margin-bottom: 10px;
    }
    
    .hero .title {
      font-family: 'Pinyon Script', cursive;
      color: #CE8678; /* Rusty Coral */
      font-size: 48px;
      font-weight: normal;
      line-height: 1.2;
    }
    
    .hero .subtitle {
      font-size: 18px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: #465A72; /* Aegean */
      margin-bottom: 20px;
    }
    
    .hero p {
      margin-bottom: 30px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    
    /* Buttons */
    .btn {
      display: inline-block;
      padding: 12px 24px;
      border-radius: 4px;
      font-weight: 500;
      margin: 5px;
      transition: all 0.3s ease;
    }
    
    .btn-primary {
      background-color: #CE8678; /* Rusty Coral */
      color: white;
    }
    
    .btn-primary:hover {
      background-color: #b97267;
      color: white;
    }
    
    .btn-secondary {
      border: 2px solid #CE8678; /* Rusty Coral */
      color: #CE8678; /* Rusty Coral */
    }
    
    .btn-secondary:hover {
      background-color: rgba(206, 134, 120, 0.1);
    }
    
    /* Services */
    .services {
      padding: 40px 0;
      background-color: white;
    }
    
    .section-title {
      text-align: center;
      margin-bottom: 30px;
      color: #465A72; /* Aegean */
      font-size: 32px;
    }
    
    .service-list {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
      list-style: none;
    }
    
    @media (min-width: 768px) {
      .service-list {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    .service-item {
      border: 1px solid #C0CACB; /* Sea Mist */
      border-radius: 8px;
      overflow: hidden;
    }
    
    .service-item h3 {
      background-color: #465A72; /* Aegean */
      color: white;
      padding: 15px;
      text-align: center;
    }
    
    .service-item p {
      padding: 15px;
      color: #4B746C; /* Pine */
    }
    
    /* Service Card Styles */
    .service-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
    }

    @media (min-width: 576px) {
      .service-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (min-width: 992px) {
      .service-grid {
        grid-template-columns: repeat(4, 1fr);
      }
    }

    .service-card {
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      background-color: white;
    }

    .service-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .service-image {
      height: 200px;
      overflow: hidden;
    }

    .service-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .service-card:hover .service-image img {
      transform: scale(1.05);
    }

    .service-card h3 {
      padding: 15px 15px 5px;
      color: #465A72; /* Aegean */
      font-size: 20px;
    }

    .service-card p {
      padding: 0 15px 15px;
      color: #4B746C; /* Pine */
      font-size: 14px;
    }

    .service-link {
      display: inline-block;
      margin: 0 15px 15px;
      color: #CE8678; /* Rusty Coral */
      font-weight: 500;
      position: relative;
    }

    .service-link:after {
      content: '';
      position: absolute;
      width: 100%;
      height: 2px;
      bottom: -2px;
      left: 0;
      background-color: #CE8678; /* Rusty Coral */
      transform: scaleX(0);
      transform-origin: bottom right;
      transition: transform 0.3s ease;
    }

    .service-link:hover:after {
      transform: scaleX(1);
      transform-origin: bottom left;
    }

    .service-link:hover {
      color: #CE8678; /* Rusty Coral */
    }
    
    /* Testimonial */
    .testimonial {
      background-color: #4B746C; /* Pine */
      color: white;
      padding: 40px 0;
      text-align: center;
    }
    
    .testimonial-content {
      max-width: 800px;
      margin: 0 auto;
      padding: 30px;
      border-radius: 8px;
      background-color: white;
      color: #465A72; /* Aegean */
    }
    
    .testimonial-text {
      font-style: italic;
      margin-bottom: 20px;
      font-size: 18px;
    }
    
    .testimonial-author {
      color: #CE8678; /* Rusty Coral */
      font-weight: 500;
    }
    
    /* Call to Action */
    .cta {
      background-color: #CE8678; /* Rusty Coral */
      color: white;
      padding: 40px 0;
      text-align: center;
    }
    
    .cta h2 {
      margin-bottom: 15px;
    }
    
    .cta p {
      margin-bottom: 30px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    
    /* Footer */
    footer {
      background-color: #465A72; /* Aegean */
      color: white;
      padding: 30px 0;
    }
    
    .footer-content {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    @media (min-width: 768px) {
      .footer-content {
        grid-template-columns: repeat(3, 1fr);
      }
    }
    
    .footer-section h3 {
      color: #CE8678; /* Rusty Coral */
      margin-bottom: 15px;
      font-size: 18px;
    }
    
    .footer-section ul {
      list-style: none;
    }
    
    .footer-section li {
      margin-bottom: 10px;
    }
    
    .footer-section a {
      color: white;
    }
    
    .footer-section a:hover {
      color: #CE8678; /* Rusty Coral */
    }
    
    .copyright {
      text-align: center;
      margin-top: 30px;
      padding-top: 20px;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      font-size: 14px;
    }
    
    /* Social Icons */
    .social-icons {
      display: flex;
      gap: 10px;
      margin-bottom: 15px;
    }
    
    .social-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background-color: rgba(255, 255, 255, 0.1);
    }
    
    .social-icon:hover {
      background-color: #CE8678; /* Rusty Coral */
    }
    
    /* Subscribe Form */
    .subscribe-form {
      display: flex;
      margin-top: 15px;
    }
    
    .subscribe-input {
      flex-grow: 1;
      padding: 10px;
      border: none;
      border-radius: 4px 0 0 4px;
    }
    
    .subscribe-button {
      background-color: #CE8678; /* Rusty Coral */
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 0 4px 4px 0;
      cursor: pointer;
    }
  </style>
</head>

