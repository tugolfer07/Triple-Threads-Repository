---
import Layout from '../layouts/Layout.astro';

// Define your data variables here - no return statements
const pageTitle = "Triple Threds | Custom Embroidery";
const categories = [
  {
    title: "School Uniforms",
    description: "Custom embroidery for private school uniforms",
    image: "/images/placeholder-school.jpg" 
  },
  {
    title: "Golf Products",
    description: "Custom headcovers and golf accessories",
    image: "/images/placeholder-golf.jpg"
  },
  {
    title: "Corporate Apparel",
    description: "Professional branded clothing for businesses",
    image: "/images/placeholder-corporate.jpg"
  },
  {
    title: "Personalized Gifts",
    description: "Custom monogrammed items for special occasions",
    image: "/images/placeholder-gifts.jpg"
  }
];

// Add any other data you need
---

<Layout title={pageTitle}>
  <!-- Custom fonts -->
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Pinyon+Script&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap');
    
    .script-font {
      font-family: 'Pinyon Script', cursive;
    }
    .uppercase {
      text-transform: uppercase;
    }
  </style>
  
  <!-- Header -->
  <header>
    <div class="top-bar bg-gray-900 text-white py-2">
      <div class="container mx-auto flex justify-between items-center px-4">
        <a href="/" class="script-font text-2xl">Triple Threds</a>
        <div class="flex items-center gap-4">
          <a href="/login" class="text-sm">Login</a>
          <a href="/register" class="text-sm">Register</a>
          <a href="/cart" class="relative w-6 h-6 bg-white rounded flex items-center justify-center">
            <span class="text-gray-800 text-sm">ðŸ›’</span>
          </a>
        </div>
      </div>
    </div>
    
    <div class="main-menu bg-white py-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center px-4">
        <div class="flex gap-5">
          <a href="/" class="text-gray-800 font-medium">Home</a>
          <a href="/services" class="text-gray-800 font-medium">Services</a>
          <a href="/portfolio" class="text-gray-800 font-medium">Portfolio</a>
          <a href="/about" class="text-gray-800 font-medium">About Us</a>
          <a href="/contact" class="text-gray-800 font-medium">Contact</a>
        </div>
        
        <form class="flex border border-gray-200 rounded overflow-hidden">
          <input type="text" placeholder="Search..." class="px-4 py-2 border-none outline-none w-48">
          <button type="submit" class="bg-rose-800 text-white px-4 py-2">Search</button>
        </form>
      </div>
    </div>
  </header>
  
  <!-- Hero Section -->
  <section class="bg-rose-50 py-16 text-center">
    <div class="container mx-auto px-4">
      <h1 class="mb-5">
        <span class="script-font text-6xl block text-rose-800 mb-1 font-normal">Triple Threds</span>
        <span class="uppercase text-base tracking-widest text-gray-600 font-light">CUSTOM EMBROIDERY</span>
      </h1>
      <p class="text-xl max-w-2xl mx-auto mb-8">Professional embroidery for schools, businesses, and personalized projects</p>
      <div class="flex gap-4 justify-center flex-wrap">
        <a href="/contact" class="bg-rose-800 text-white px-6 py-3 rounded">Get a Quote</a>
        <a href="/portfolio" class="border-2 border-rose-800 text-rose-800 px-6 py-3 rounded">View Our Work</a>
      </div>
    </div>
  </section>
  
  <!-- Categories Section -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {categories.map((category) => (
          <a href={`/services/${category.title.toLowerCase().replace(/\s+/g, '-')}`} class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
            <div class="h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-600">{category.title}</span>
            </div>
            <div class="p-5">
              <h3 class="text-rose-800 font-medium text-lg mb-1">{category.title}</h3>
              <p class="text-gray-700 text-sm">{category.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Featured Projects Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl text-center text-gray-700 mb-10">Featured Projects</h2>
      
      <div class="grid grid-cols-2 md:grid-cols-3 gap-5">
        <!-- Project placeholders - replace with actual projects -->
        {[1, 2, 3, 4, 5, 6].map((item) => (
          <div class="bg-rose-50 rounded-lg h-56 flex items-center justify-center">
            <span class="text-gray-500">Project {item}</span>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-10">
        <a href="/portfolio" class="border-2 border-rose-800 text-rose-800 px-6 py-3 rounded inline-block">View All Projects</a>
      </div>
    </div>
  </section>
  
  <!-- Testimonial Section -->
  <section class="py-16 bg-rose-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl text-center text-gray-700 mb-10">What Our Clients Say</h2>
      
      <div class="bg-white p-8 rounded-lg shadow-md max-w-3xl mx-auto text-center">
        <p class="text-lg italic mb-5">
          "Triple Threds transformed our team uniforms with incredible attention to detail. Their embroidery quality is outstanding and their customer service is even better!"
        </p>
        <p class="font-bold">â€” Sarah Johnson, Oak Hill Academy</p>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-rose-800 text-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl mb-4">Ready to Start Your Custom Project?</h2>
      <p class="max-w-xl mx-auto mb-8">
        Contact us today for a free quote and consultation.
      </p>
      <a href="/contact" class="bg-white text-rose-800 px-6 py-3 rounded inline-block font-medium">Get Started</a>
    </div>
  </section>
  
  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-10 mb-10">
        <div>
          <h4 class="text-rose-300 font-medium mb-5">Services</h4>
          <ul class="space-y-3">
            <li><a href="/services/school-uniforms" class="hover:text-rose-300">School Uniforms</a></li>
            <li><a href="/services/golf-products" class="hover:text-rose-300">Golf Products</a></li>
            <li><a href="/services/corporate-apparel" class="hover:text-rose-300">Corporate Apparel</a></li>
            <li><a href="/services/custom-designs" class="hover:text-rose-300">Custom Designs</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="text-rose-300 font-medium mb-5">Customer Care</h4>
          <ul class="space-y-3">
            <li><a href="/about" class="hover:text-rose-300">About Us</a></li>
            <li><a href="/contact" class="hover:text-rose-300">Contact Us</a></li>
            <li><a href="/faq" class="hover:text-rose-300">FAQ</a></li>
            <li><a href="/policies" class="hover:text-rose-300">Policies</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="text-rose-300 font-medium mb-5">Connect With Us</h4>
          <div class="flex gap-4 mb-5">
            <a href="#" class="w-10 h-10 bg-white bg-opacity-10 rounded-full flex items-center justify-center hover:bg-rose-800">f</a>
            <a href="#" class="w-10 h-10 bg-white bg-opacity-10 rounded-full flex items-center justify-center hover:bg-rose-800">in</a>
            <a href="#" class="w-10 h-10 bg-white bg-opacity-10 rounded-full flex items-center justify-center hover:bg-rose-800">p</a>
          </div>
          
          <h5 class="font-medium mb-3">Join our newsletter</h5>
          <form class="flex">
            <input type="email" placeholder="Your email" class="px-4 py-2 rounded-l w-full">
            <button type="submit" class="bg-rose-800 text-white px-4 py-2 rounded-r">Subscribe</button>
          </form>
        </div>
      </div>
      
      <div class="text-center pt-6 border-t border-gray-800 text-gray-400 text-sm">
        &copy; 2025 Triple Threds Embroidery. All rights reserved.
      </div>
    </div>
  </footer>
</Layout>
