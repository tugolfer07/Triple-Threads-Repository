---
// CRM Dashboard Coming Soon page
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Client Dashboard Coming Soon | Triple Threads Embroidery</title>
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Pinyon+Script&display=swap" rel="stylesheet">
  
  <style>
    /* Simple CSS with no dependencies */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Montserrat', sans-serif;
      line-height: 1.6;
      color: #465A72; /* Aegean */
      background-color: #EEEAE4; /* Pale Taupe */
    }
    
    a {
      color: #465A72; /* Aegean */
      text-decoration: none;
    }
    
    a:hover {
      color: #CE8678; /* Rusty Coral */
    }
    
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    /* Header */
    header {
      background-color: #465A72; /* Aegean */
      color: white;
      padding: 10px 0;
    }
    
    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    .logo {
      font-family: 'Pinyon Script', cursive;
      font-size: 28px;
      color: white;
    }
    
    .nav-links {
      display: flex;
      gap: 15px;
    }
    
    .nav-links a {
      color: white;
    }
    
    /* Coming Soon Section */
    .coming-soon {
      padding: 60px 0;
      text-align: center;
    }
    
    .coming-soon-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 40px;
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }
    
    .label {
      display: inline-block;
      padding: 8px 16px;
      background-color: #CE8678; /* Rusty Coral */
      color: white;
      border-radius: 30px;
      font-size: 14px;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
      margin-bottom: 20px;
    }
    
    .coming-soon h1 {
      margin-bottom: 20px;
      color: #465A72; /* Aegean */
      font-size: 36px;
      font-weight: 700;
    }
    
    .coming-soon p {
      margin-bottom: 30px;
      color: #666;
      font-size: 18px;
      max-width: 600px;
      margin-left: auto;
      margin-right: auto;
    }
    
    .feature-list {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
      margin: 40px 0;
      text-align: left;
    }
    
    @media (min-width: 768px) {
      .feature-list {
        grid-template-columns: repeat(2, 1fr);
      }
    }
    
    .feature-item {
      display: flex;
      align-items: flex-start;
      gap: 15px;
    }
    
    .feature-icon {
      width: 40px;
      height: 40px;
      background-color: rgba(75, 116, 108, 0.1); /* Pine with opacity */
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;
      color: #4B746C; /* Pine */
      font-size: 18px;
      font-weight: bold;
    }
    
    .feature-text h3 {
      margin-bottom: 5px;
      color: #465A72; /* Aegean */
      font-size: 18px;
    }
    
    .feature-text p {
      margin-bottom: 0;
      font-size: 14px;
      color: #666;
    }
    
    /* Notification Form */
    .notification-form {
      margin-top: 40px;
      padding-top: 40px;
      border-top: 1px solid #eee;
    }
    
    .notification-form h2 {
      margin-bottom: 20px;
      font-size: 24px;
      color: #465A72; /* Aegean */
    }
    
    .notification-form p {
      margin-bottom: 30px;
      font-size: 16px;
    }
    
    .form-group {
      display: flex;
      max-width: 500px;
      margin: 0 auto;
    }
    
    .form-input {
      flex-grow: 1;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: 4px 0 0 4px;
      font-size: 16px;
    }
    
    .form-input:focus {
      outline: none;
      border-color: #CE8678; /* Rusty Coral */
    }
    
    .form-submit {
      padding: 12px 20px;
      background-color: #CE8678; /* Rusty Coral */
      color: white;
      border: none;
      border-radius: 0 4px 4px 0;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }
    
    .form-submit:hover {
      background-color: #b97267;
    }
    
    .countdown {
      margin-top: 30px;
      display: flex;
      justify-content: center;
      gap: 20px;
    }
    
    .countdown-item {
      text-align: center;
    }
    
    .countdown-number {
      font-size: 36px;
      font-weight: 700;
      color: #465A72; /* Aegean */
      display: block;
    }
    
    .countdown-label {
      font-size: 14px;
      color: #666;
      text-transform: uppercase;
    }
    
    /* Return to Home */
    .return-home {
      margin-top: 40px;
    }
    
    .btn-outline {
      display: inline-block;
      padding: 12px 24px;
      border: 2px solid #465A72; /* Aegean */
      color: #465A72; /* Aegean */
      border-radius: 4px;
      font-weight: 500;
      transition: all 0.3s ease;
    }
    
    .btn-outline:hover {
      background-color: #465A72; /* Aegean */
      color: white;
    }
    
    /* Footer */
    footer {
      background-color: #465A72; /* Aegean */
      color: white;
      padding: 20px 0;
      margin-top: 60px;
      text-align: center;
    }
    
    .copyright {
      font-size: 14px;
    }
    
    /* Animated elements */
    .pulse {
      animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
      0% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
      100% {
        transform: scale(1);
      }
    }
    
    .fade-in {
      opacity: 0;
      animation: fadeIn 1s forwards;
    }
    
    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }
    
    .delay-1 {
      animation-delay: 0.2s;
    }
    
    .delay-2 {
      animation-delay: 0.4s;
    }
    
    .delay-3 {
      animation-delay: 0.6s;
    }
    
    .delay-4 {
      animation-delay: 0.8s;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header>
    <div class="container">
      <div class="header-content">
        <a href="/" class="logo">Triple Threads</a>
        <div class="nav-links">
          <a href="/">Home</a>
          <a href="/client-portal">Back to Login</a>
        </div>
      </div>
    </div>
  </header>
  
  <!-- Coming Soon Section -->
  <section class="coming-soon">
    <div class="container">
      <div class="coming-soon-container">
        <span class="label pulse">Coming Soon</span>
        <h1>Client Dashboard Experience</h1>
        <p>We're building a powerful digital platform to make your embroidery orders easier than ever. Your custom client portal is on its way!</p>
        
        <div class="countdown">
          <div class="countdown-item fade-in">
            <span class="countdown-number">30</span>
            <span class="countdown-label">Days</span>
          </div>
          <div class="countdown-item fade-in delay-1">
            <span class="countdown-number">12</span>
            <span class="countdown-label">Hours</span>
          </div>
          <div class="countdown-item fade-in delay-2">
            <span class="countdown-number">45</span>
            <span class="countdown-label">Minutes</span>
          </div>
          <div class="countdown-item fade-in delay-3">
            <span class="countdown-number">02</span>
            <span class="countdown-label">Seconds</span>
          </div>
        </div>
        
        <div class="feature-list">
          <div class="feature-item fade-in">
            <div class="feature-icon">✓</div>
            <div class="feature-text">
              <h3>Order Tracking</h3>
              <p>Track your embroidery orders in real-time from submission to delivery.</p>
            </div>
          </div>
          
          <div class="feature-item fade-in delay-1">
            <div class="feature-icon">✓</div>
            <div class="feature-text">
              <h3>Digital Design Approval</h3>
              <p>View and approve embroidery designs online before production begins.</p>
            </div>
          </div>
          
          <div class="feature-item fade-in delay-2">
            <div class="feature-icon">✓</div>
            <div class="feature-text">
              <h3>Reorder with Ease</h3>
              <p>Quickly reorder previous designs with just a few clicks.</p>
            </div>
          </div>
          
          <div class="feature-item fade-in delay-3">
            <div class="feature-icon">✓</div>
            <div class="feature-text">
              <h3>Secure Payment Options</h3>
              <p>Safely process payments and view billing history anytime.</p>
            </div>
          </div>
          
          <div class="feature-item fade-in delay-4">
            <div class="feature-icon">✓</div>
            <div class="feature-text">
              <h3>School Program Management</h3>
              <p>Specialized tools for managing school uniform programs.</p>
            </div>
          </div>
          
          <div class="feature-item fade-in delay-4">
            <div class="feature-icon">✓</div>
            <div class="feature-text">
              <h3>Bulk Order Discounts</h3>
              <p>Automatic application of quantity discounts for larger orders.</p>
            </div>
          </div>
        </div>
        
        <div class="notification-form">
          <h2>Be the First to Know</h2>
          <p>Sign up to receive an email when our client portal launches.</p>
          
          <form>
            <div class="form-group">
              <input type="email" placeholder="Your email address" class="form-input" required>
              <button type="submit" class="form-submit">Notify Me</button>
            </div>
          </form>
        </div>
        
        <div class="return-home">
          <a href="/" class="btn-outline">Return to Homepage</a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Footer -->
  <footer>
    <div class="container">
      <div class="copyright">
        &copy; 2025 Triple Threads Embroidery. All rights reserved.
      </div>
    </div>
  </footer>

  <script>
    // Simple countdown timer that updates every second
    function updateCountdown() {
      // This is just for display - set your actual launch date here
      const now = new Date();
      const seconds = document.querySelector('.countdown-item:nth-child(4) .countdown-number');
      const currentSecond = parseInt(seconds.textContent);
      
      if (currentSecond > 0) {
        seconds.textContent = (currentSecond - 1).toString().padStart(2, '0');
      } else {
        seconds.textContent = '59';
        
        // Update minutes when seconds reach zero
        const minutes = document.querySelector('.countdown-item:nth-child(3) .countdown-number');
        const currentMinute = parseInt(minutes.textContent);
        
        if (currentMinute > 0) {
          minutes.textContent = (currentMinute - 1).toString().padStart(2, '0');
        } else {
          minutes.textContent = '59';
          
          // Update hours when minutes reach zero
          const hours = document.querySelector('.countdown-item:nth-child(2) .countdown-number');
          const currentHour = parseInt(hours.textContent);
          
          if (currentHour > 0) {
            hours.textContent = (currentHour - 1).toString().padStart(2, '0');
          } else {
            hours.textContent = '23';
            
            // Update days when hours reach zero
            const days = document.querySelector('.countdown-item:nth-child(1) .countdown-number');
            const currentDay = parseInt(days.textContent);
            
            if (currentDay > 0) {
              days.textContent = (currentDay - 1).toString();
            }
          }
        }
      }
    }
    
    // Update countdown every second
    setInterval(updateCountdown, 1000);
    
    // Form submission
    const form = document.querySelector('.notification-form form');
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      const email = form.querySelector('input').value;
      if (email) {
        alert('Thank you! We\'ll notify you when our client portal launches.');
        form.reset();
      }
    });
  </script>
</body>
</html>